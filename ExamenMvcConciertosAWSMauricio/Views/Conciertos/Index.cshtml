@model IEnumerable<ExamenMvcConciertosAWSMauricio.Models.Evento>

@{
    List<CategoriaEvento> categorias = ViewData["CATEGORIAS"] as List<CategoriaEvento>;
}

<h1>Eventos</h1>
<form method="post">
    <label>Categorias</label>
    <select name="idcategoria" class="form-select">
        @foreach (CategoriaEvento categoria in categorias)
        {
            <option value="@categoria.IdCategoria">@categoria.Nombre</option>
        }
    </select>
    <button class="btn btn-primary">Filtrar</button>
</form>
@if (Model != null)
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.IdEvento)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Nombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Artista)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IdCategoria)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Imagen)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.IdEvento)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Artista)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IdCategoria)
                    </td>
                    <td>
                        <img src="@Html.DisplayFor(modelItem => item.Imagen)" style="width:100px;height:100px;" />
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
